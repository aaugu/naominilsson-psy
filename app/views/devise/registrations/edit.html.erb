<div class="general-container">
  <div class="header">
    <div></div>
    <%= image_tag "logo-titles.png", class: "logo-title" %>
    <h1 class="text-center">MODIFIER</h1>
    <%= image_tag "logo-titles.png", class: "logo-title"%>
    <div></div>
  </div>

  <div class="forms-content m-auto">
    <%= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mb-5">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "Laissez vide si vous ne voulez pas le modifier.",
                    required: false,
                    input_html: { autocomplete: "new-password" },
                    label: "Nouveau mot de passe" %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" },
                    label: "Confirmation du mot de passe" %>
        <%= f.input :current_password,
                    hint: "Nous avons besoin de votre mot de passe actuel pour confirmer les changements.",
                    required: true,
                    input_html: { autocomplete: "current-password" },
                    label: "Mot de passe actuel" %>
      </div>

      <div class="form-actions  text-center m-auto">
        <%= f.button :submit, "Mettre à jour", class: "form-btn mb-5" %>
      </div>
    <% end %>
  </div>

  <div class="forms-content d-flex justify-content-between align-items-center m-auto">
    <%= link_to "Revenir en arrière", :back, class: "btn-cancel" %>
    <%# <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-cancel" %>
  </div>
</div>
